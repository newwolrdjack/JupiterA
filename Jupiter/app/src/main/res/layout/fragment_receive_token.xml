<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.ReceiveTokenFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="340dp"
        android:background="@color/jupiterChain" />

    <View
        android:layout_width="5dp"
        android:layout_height="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="350dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="350dp"
        android:text="Token"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/text_receive_Stardust"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="365dp"
        android:hint="Stardust"
        android:maxLines="1"
        android:textSize="14dp" />

    <View
        android:layout_width="5dp"
        android:layout_height="18dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="350dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginTop="350dp"
        android:text="Transaction fee"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/text_receive_token"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginTop="365dp"
        android:hint="Transaction fee"
        android:maxLines="1"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/image_user_qr_address"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="55dp" />
    <View
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_width="5dp"
        android:layout_height="18dp"
        android:background="@color/jupiterChain" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CU_address"
        android:textSize="14sp"
        android:textColor="@color/jupiterChain"/>
    <TextView
        android:id="@+id/text_receive_address"
        android:layout_marginTop="300dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/current_cu_address"/>

</FrameLayout>
