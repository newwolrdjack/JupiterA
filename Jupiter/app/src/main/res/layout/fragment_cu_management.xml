<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.CUManagementFragment">

    <TextView
        android:id="@+id/text_block_num_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/number_of_blocks"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_height="3px"
        android:background="@color/colorHint"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent" />

    <TextView
        android:id="@+id/text_storage_status_title"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:text="@string/storage_status"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="95dp"
        android:layout_marginStart="20dp"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:background="@color/colorBackground" />

    <View
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:background="@color/colorBackground" />

    <View
        android:layout_marginTop="145dp"
        android:layout_marginStart="20dp"
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:background="@color/colorBackground" />

    <View
        android:layout_height="3px"
        android:background="@color/colorHint"
        android:layout_marginTop="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent" />

    <TextView
        android:id="@+id/text_block_num"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="20dp"
        android:text="23,451"
        android:textColor="#9a9a9a"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_distrib_status_title"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="@string/distribution_status"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_optcu"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:background="@drawable/roundbutton"
        android:text="Optimize CU"
        android:textColor="#000000" />

</FrameLayout>
