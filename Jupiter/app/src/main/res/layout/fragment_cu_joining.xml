<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.CUJoiningFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_marginTop="20dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp"
        android:text="CU introduction" />
    <View
        android:layout_marginTop="60dp"
        android:layout_width="4dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/jupiterChain" />
    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp"
        android:text="CU Name" />

    <View
        android:layout_marginTop="90dp"
        android:layout_width="4dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:text="Size"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_cu_joining_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:text="16 peers"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_cu_joining_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        android:text="Jupiter core"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="120dp"
        android:layout_width="4dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:text="Type"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_cu_joining_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="120dp"
        android:text="open"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="150dp"
        android:layout_width="4dp"
        android:layout_height="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/jupiterChain" />
    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp"
        android:text="Build Time" />

    <View
        android:layout_marginTop="200dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />
    <TextView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp"
        android:text="CU Address" />

    <TextView
        android:id="@+id/text_current_cu_address"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="220dp"
        android:text="@string/current_cu_address"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_cu_qr_address"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="255dp"
        app:srcCompat="@drawable/qr_address" />


    <TextView
        android:id="@+id/text_cu_joining_build_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:text="2017-01-14 3:00am"
        android:textColor="#000000"
        android:textSize="14sp" />


    <View
        android:id="@+id/underline_cu_name"
        android:layout_height="3px"
        android:background="@color/colorHint"
        android:layout_marginTop="84dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent" />
    <View
        android:id="@+id/underline_cu_size"
        android:layout_height="3px"
        android:background="@color/colorHint"
        android:layout_marginTop="114dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent" />
    <View
        android:id="@+id/underline_cu_type"
        android:layout_height="3px"
        android:background="@color/colorHint"
        android:layout_marginTop="144dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent" />
    <View
        android:id="@+id/underline_cu_build_time"
        android:layout_height="3px"
        android:background="@color/colorHint"
        android:layout_marginTop="174dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="fill_parent" />



</FrameLayout>
