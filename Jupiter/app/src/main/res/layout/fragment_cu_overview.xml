<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.CUJoiningFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_marginTop="20dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />

    <View
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <View
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginTop="100dp"
        android:background="@color/jupiterChain" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="145dp"
        android:background="#000000" />

    <View
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginTop="170dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:id="@+id/text_cu_overview_select"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Input CU Name"
        android:textColor="#CAE1FF"
        android:textSize="14sp" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="Select CU type: "
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_cu_joining_Member_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:text="Input CU members"
        android:textColor="#CAE1FF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="CU Name"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkbox_public_cu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:text="Public CU" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="200dp"
        android:text="Protected CU" />

    <Button
        android:id="@+id/button_create_cu"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="380dp"
        android:background="@drawable/roundbutton"
        android:text="Create"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Member Number:"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

</FrameLayout>