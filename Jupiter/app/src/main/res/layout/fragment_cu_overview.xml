<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.CUJoiningFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_marginTop="20dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />


    <View
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginTop="100dp"
        android:background="@color/jupiterChain" />


    <View
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginTop="170dp"
        android:background="@color/jupiterChain" />

    <EditText
        android:id="@+id/text_cu_name"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="14sp" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="Select CU type: "
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/text_cu_max_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="CU Name"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />


    <Button
        android:id="@+id/button_create_cu"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="380dp"
        android:background="@drawable/roundbutton"
        android:text="Create"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Member Number:"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radio_group_cu_type">
        <RadioButton
            android:id="@+id/radio_is_public_cu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:text="Public CU" />

        <RadioButton
            android:id="@+id/radio_is_protected_cu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-30dp"
            android:text="Protected CU" />
    </RadioGroup>


</FrameLayout>