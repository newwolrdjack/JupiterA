<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.CUJoiningFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_marginTop="20dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Select CU"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <View
        android:layout_marginTop="120dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:text="Member Number"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="145dp"
        android:layout_marginStart="140dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <View
        android:layout_marginTop="190dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="@color/jupiterChain" />
    <TextView
        android:layout_marginTop="190dp"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/jupiterChain"
        android:textSize="14sp"
        android:text="Member Online" />

    <TextView
        android:id="@+id/text_cu_joining_Member_number"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="120dp"
        android:text="16 peers"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_cu_overview_select"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Selected CU Name"
        android:textColor="#CAE1FF"
        android:textSize="14sp" />

</FrameLayout>