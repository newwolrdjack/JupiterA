<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ust.jupiter.jupiter.fragment.CUJoiningFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_marginTop="20dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="#00CCCC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Select CU"
        android:textColor="#00CCFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_cu_overview_select"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="#CAE1FF"
        android:textSize="18sp"
        android:text="Selected CU Name" />
    <View
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <View
        android:layout_marginTop="120dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="#00CCCC" />
    <TextView
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="#00CCFF"
        android:textSize="18sp"
        android:text="Member Number" />
    <TextView
        android:id="@+id/text_cu_joining_Member_number"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Number" />
    <View
        android:layout_marginTop="145dp"
        android:layout_marginStart="180dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <View
        android:layout_marginTop="190dp"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:background="#00CCCC" />
    <TextView
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="#00CCFF"
        android:textSize="18sp"
        android:text="Member Online" />

    <ListView
        android:id="@+id/text_cu_overview_Onlie"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="190dp"
        android:text="Token"
        android:textColor="#000000"
        android:textSize="18sp" />
    <View
        android:layout_marginTop="220dp"
        android:layout_marginStart="180dp"
        android:layout_width="10dp"
        android:layout_height="140dp"
        android:background="#00CCFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="140dp"
        android:id="@+id/button_transfer"
        android:text="Join" />

</FrameLayout>